<%= render "shared/header" %>
<div class='music-index-html'>
  <div class='main'>
    <%# <%= image_tag("new_release_only-logo.JPG", class:"main-background-image")%>
    <div class='main-contents'>
      <div class='music-index-text'>PickUp</div>
      <div class='musics-info-slide'>
        <a class='musics-info-slide' href="https://ja.bloggif.com/" title="フォトモンタージュ"><img src="https://data.bloggif.com/distant/user/store/1/9/7/b/1f49dbb851d647f62280999d0150b791.gif" alt="モンタージュBloggifを作成しました" width="100%" height="400" /></a>
      </div>
      <div class='music-index-text'>MusicLibrary</div>
      <div class="music-library">
        <% @musics.each do |music| %>
          <%= link_to "#", method: :get do %>
            <div class='music-info'>
              <%# <div class="music-image"> %>
                <%# <%= image_tag "sample.jpg", class:"music-image" %>
                <%= image_tag music.image.variant(resize:'300x300'), class:"music-image" if music.image.attached? %>
                <% if music.movie.attached? %>
                  <%= video_tag rails_blob_path(music.movie, disposition: "attachment"), controls: true, size: '300x300', class:"music-image"%>
                <% end %>
                <% if music.youtube_url.present? %>
                <div class="youtube">
                  <iframe width="300" height="300" src="https://www.youtube.com/embed/<%= music.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
                <% else %>
                <% end %>
              <%# </div> %>
              <div class='music-info-bottom'>
                <div class='title-artist'>
                  <div class='music-title'>
                    <%= music.title %>
                  </div>
                  <div class='music-artist'>
                    <%= music.artist %>
                  </div>
                </div>
                <div class='like-btn'>
                  <%= image_tag "like.png", class:"like-icon" %>
                  <span class='like-count'>0</span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="twitter">
      <div class='music-index-text'>Twitter</div>
      <a class="twitter-timeline" data-width="100%" data-height="800" href="https://twitter.com/release_only?ref_src=twsrc%5Etfw">Tweets by release_only</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
  </div>
  <div class='post-btn'>
    <div class='post-btn-text'>Please Share Your Music Now!!</div>

    <% if user_signed_in? %>
      <%= link_to new_music_path do %>
        <div class="logo-btn">
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
        </div>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path do %>
        <div class="logo-btn">
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
          <%= image_tag "new_release_only-logo.JPG" , size: '185x50' ,class: "post-btn-icon" %>
        </div>
      <% end %>
    <% end %>
    <div class='post-btn-text'>← Click Here!!</div>
  </div>
</div>
