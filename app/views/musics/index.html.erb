<header class='top-page-header'>
  <%= image_tag("new_release_only-header.JPG", class:"header-background-image")%>
  <div class = 'header-contents'>
    <div class = 'left-header'>
      <%= image_tag("new_release_only-logo.JPG", class:"new_release_only-logo")%>
      <div class='new_release_only'>new release only!</div>
    </div>
    <div class='right-header'>
      <%= form_with(url: search_musics_path, local: true, method: :get, class: "search-form") do |f| %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank:'ジャンル検索'}, class:"select-box", id:"music-genre" %>
        <%= f.text_field :keyword, placeholder: "キーワード検索（アーティスト名、曲名、リリース年 etc...）", class: 'input-box' %>
        <%= f.submit "検索", class: "search-btn" %>
      <% end %>
      <div class = 'user_info'>
        <div></div>
        <% if user_signed_in? %>
          <ul class='user_info'>
            <li>
              <%= link_to current_user.nickname, "/users/#{current_user.id}", class: "user-nickname" %>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
            </li>
          </ul>
        <% else %>
          <div>
            <%= link_to 'ログイン', new_user_session_path, class: "login" %>
            <%= link_to '新規ユーザー登録', new_user_registration_path, class: "sign-up" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
