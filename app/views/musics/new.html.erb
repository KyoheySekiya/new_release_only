<div class="musics-registration-contents">
  <header class="musics-registration-header">
    <%# <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
  </header>
  <div class="musics-registration-main">
    <h2 class="musics-registration-title">musicの情報を入力</h2>
    <%= form_with model: @music, local: true do  |f| %>

    <%# <%= render 'shared/error_messages', model: f.object %>

    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        ジャケット画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, multiple: true %>
      </div>
    </div>
    <%# /出品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-musics">
      <div class="weight-bold-text">
        CDタイトル名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"musics-text", id:"music-name", placeholder:"CDタイトル名（必須 40文字まで)", maxlength:"40" %>
      <div class="musics-explain">
        <div class="weight-bold-text">
          アーティスト名
          <span class="indispensable">必須</span>
        </div>
      <%= f.text_area :name, class:"musics-text", id:"music-name", placeholder:"アーティスト名（必須 40文字まで)", maxlength:"40" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 商品の詳細 %>
    <div class="musics-detail">
      <div class="weight-bold-text">
        ジャンル
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:category_id, [], :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      <div class="weight-bold-text">
        シングル or アルバム
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:condition_id, [], :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      <div class="weight-bold-text">
        年
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:category_id, [], :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      <div class="weight-bold-text">
        月
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:condition_id, [], :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      <div class="weight-bold-text">
        CDの説明
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :text, class:"musics-text", id:"music-info", placeholder:"CDの説明（必須 1,000文字まで）     おすすめの曲名 /感想 /その他アピールポイント" ,rows:"7" ,maxlength:"1000" %>
    </div>
    <%# /商品の詳細 %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">フリマ利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%# <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %> %>
    <p class="inc">
      ©︎Furima,Inc.
    </p>
  </footer>
</div>